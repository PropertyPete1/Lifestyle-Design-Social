# Environment Variables for Vercel Deployment
# Copy this to .env.local and fill in your values

# Database
MONGODB_URI=mongodb://localhost:27017/lifestyle-design-auto-poster-v2

# Instagram API (Meta App Review)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_USER_ID=your_instagram_business_account_id

# YouTube API  
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token

# OpenAI API (for AI caption rewriting)
OPENAI_API_KEY=your_openai_api_key_here

# App Configuration
NODE_ENV=development
PORT=3002

# For Meta App Review Demo
# The app currently uses mock data for Instagram content
# Real Instagram API will be enabled after permissions approval
DEMO_MODE=true