{
  "version": 2,
  "name": "lifestyle-social-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://lifestyle-social-backend.onrender.com",
    "NEXT_PUBLIC_BASE_URL": "https://lifestyle-social.vercel.app"
  },
  "functions": {
    "frontend/app/**/*.tsx": {
      "runtime": "nodejs18.x"
    }
  }
}